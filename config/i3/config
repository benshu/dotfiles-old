#########################################
# Volume Control (ALSA - uses media keys)
#########################################
bindsym XF86AudioRaiseVolume exec "amixer -q sset Master 1%+ unmute"
bindsym XF86AudioLowerVolume exec "amixer -q sset Master 1%- unmute"
bindsym XF86AudioMute exec "amixer -q sset Master,0 toggle"

# Set the caps lock key to control
exec --no-startup-id setxkbmap -option ctrl:nocaps

# lockscreen
bindsym $mod+shift+x exec betterlockscreen --lock
exec_always --no-startup-id betterlockscreen --blur -u /home/hagay/Pictures/wallpapers/ -r 1920x1080

# Set last used image as desktop background
exec --no-startup-id betterlockscreen -w
bindsym Print exec --no-startup-id import -window root ~/Pictures/screenshots/`date +%d%m%y%H%M%S`.png

# Screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id "light -U 5"
bindsym XF86MonBrightnessUp exec --no-startup-id "light -A 5"

# specific windows settings
#
for_window [window_role="pop-up|bubble|task_dialog|Preferences|setup"] floating enable
for_window [window_type="dialog|menu"] floating enable
for_window [window_role="browser|GtkFileChooserDialog"] resize set 800 600, move position center
for_window [class="(?i)keeweb|lxappearance"] floating enable
